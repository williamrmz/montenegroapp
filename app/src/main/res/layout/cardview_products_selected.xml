<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:contentPadding="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="2.5dp"
        android:paddingLeft="5dp"
        android:paddingTop="2.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNameSelected"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:text="PRODUCTO SELECCIONADO"
                    android:textColor="@color/purple_700"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tvPriceSelected"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="Precio"
                        android:inputType="numberDecimal"
                        android:selectAllOnFocus="true"
                        android:textColor="#FF16776E"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tvPaquete"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:hint="Unidad"
                        android:inputType="none"
                        android:focusable="false"
                        android:textColor="#FF16776E"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCategorySelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CATEGORÍA BUSCADA"
                        android:textColor="#2196F3"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etCantSelected"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:hint="CANTIDAD"
                        android:inputType="number"
                        android:selectAllOnFocus="true"
                        android:textColor="#16776E"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Total S/. "
                        android:inputType="none"
                        android:focusable="false"
                        android:paddingRight="0dp"
                        android:textSize="18dp"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/tvTotalSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="500"
                        android:inputType="number|numberDecimal"
                        android:paddingLeft="0dp"
                        android:selectAllOnFocus="true"
                        android:textColor="#7E170F"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
